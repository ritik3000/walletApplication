generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String
  email     String  @unique
  password  String
  wallet    Wallet?
}

model Wallet {
  id     String @id @default(uuid())
  userId String @unique
  amount BigInt
  user   User   @relation(fields: [userId], references: [id])
}
